@model IEnumerable<News.Domain.Models.ParentCategory>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Dynamic Table

            </header>
            <div id="sample_1_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div class="row">

                    <div class="col-sm-6">
                        <div id="sample_1_length" class="dataTables_length">

                            <label>
                                <a class="btn btn-success"><i class="icon-plus"></i>&nbsp; افزودن فرزند</a>
                                @* <select size="1" name="sample_1_length" aria-controls="sample_1" class="form-control"><option value="10" selected="selected">10</option>
                                    <option value="25">25</option><option value="50">50</option><option value="100">100</option></select> records per page*@
                            </label>
                        </div>
                        </div>
                    <div class="col-sm-6">
                        <div class="dataTables_filter" id="sample_1_filter">
                            <label>
                                Search: 
                                <div class="input-group m-bot15">
                                    <input type="text" class="form-control">
                                    <span class="input-group-addon">
                                        <a class=" btn-secondary"><i class="icon-search"></i></a>
                                    </span>
                                </div>
                            </label>
                        </div></div>
                </div>
                <table class="table table-striped table-bordered" id="sample_1" aria-describedby="sample_1_info">
                    <thead>
                        <tr role="row">
                            <th>عنوان</th>
                            <th>تعداد زیردسته</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cat in Model)
                        {
                            <tr>
                                <td>@cat.Name</td>
                                <td>@cat.NewsCategories.Count()</td>
                                <th>
                                    <div class="btn-group">
                                        <a class="btn btn-primary"><i class="icon-edit"></i></a>
                                        <a class="btn btn-danger"><i class="icon-trash"></i></a>
                                        <a class="btn btn-success"><i class="icon-plus"></i>&nbsp; افزودن فرزند</a>
                                        @if (cat.NewsCategories.Count() > 0)
                                        {
                                            <a class="btn btn-info"><i class="icon-info"></i>&nbsp; مشاهده فرزندان</a>
                                        }

                                    </div>
                                </th>
                            </tr>
                        }
                    </tbody>

                </table>
                <div class="row"><div class="col-sm-6"><div class="dataTables_info" id="sample_1_info">Showing 1 to 10 of 25 entries</div></div><div class="col-sm-6"><div class="dataTables_paginate paging_bootstrap pagination"><ul><li class="prev disabled"><a href="#">← Prev</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li><a href="#">3</a></li><li class="next"><a href="#">Next → </a></li></ul></div></div></div>
            </div>
        </section>
    </div>
</div>
